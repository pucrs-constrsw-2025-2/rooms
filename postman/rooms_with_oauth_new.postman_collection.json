      "item": [
        {
          "name": "Rooms - Listar com filtros",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code é 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const json = pm.response.json();",
                  "if (json && json.items && json.items.length && !pm.environment.get(\"rooms_roomId\")) {",
                  "    pm.environment.set(\"rooms_roomId\", json.items[0]._id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{rooms_base}}/api/v1/rooms?page=1&limit=20&building=&category=&status=&minCapacity=&maxCapacity=&number=",
