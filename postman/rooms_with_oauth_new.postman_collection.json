                  "pm.test(\"Criado com sucesso\", function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "});",
                  "",
                  "const body = pm.response.json();",
                  "if (body && body._id) {",
                  "    pm.environment.set(\"rooms_roomId\", body._id);",
                  "}"
